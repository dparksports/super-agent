<Page
    x:Class="OpenClaw.Windows.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OpenClaw.Windows.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:OpenClaw.Windows.Models"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ListView x:Name="ChatList" ItemsSource="{x:Bind Messages}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:ChatMessage">
                    <StackPanel Margin="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding Role}" FontWeight="Bold" Foreground="{ThemeResource SystemControlHighlightAccentBrush}"/>
                            <Button Grid.Column="1" Content="Copy" Click="CopyButton_Click" Tag="{Binding Content}" FontSize="10" Padding="4,2" Height="24" Margin="0,0,0,4" />
                        </Grid>
                        <TextBlock Text="{Binding Content}" TextWrapping="WrapWholeWords" IsTextSelectionEnabled="True" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <StackPanel Grid.Row="1" Margin="20,0,20,10" x:Name="DownloadStatusPanel" Visibility="Collapsed">
             <TextBlock x:Name="DownloadStatusText" Text="Downloading Model..." HorizontalAlignment="Center" Margin="0,0,0,5"/>
             <ProgressBar x:Name="DownloadProgressBar" Maximum="100" />
        </StackPanel>

        <Grid Grid.Row="1" Margin="20" x:Name="InputGrid" AllowDrop="True" DragOver="InputGrid_DragOver" Drop="InputGrid_Drop">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Image Preview -->
            <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,0,0,8" x:Name="ImagePreviewPanel" Visibility="Collapsed">
                <Border CornerRadius="8" BorderBrush="{ThemeResource SystemControlHighlightAccentBrush}" BorderThickness="2">
                    <Grid>
                        <Image x:Name="ImagePreview" Height="100" Stretch="Uniform" />
                        <Button VerticalAlignment="Top" HorizontalAlignment="Right" Content="âŒ" Background="Red" Foreground="White" FontSize="10" Padding="2" Margin="2" Click="ClearImage_Click" />
                    </Grid>
                </Border>
                <TextBlock VerticalAlignment="Center" Margin="10,0,0,0" FontStyle="Italic" Text="Image attached" Foreground="Gray"/>
            </StackPanel>

            <TextBox Grid.Row="1" x:Name="InputBox" PlaceholderText="Ask Super Agent ðŸ¦¸â€â™‚ï¸ (Paste/Drop images supported)..." KeyUp="InputBox_KeyUp" Paste="InputBox_Paste"/>
            
            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="10,0,0,0">
                <ComboBox x:Name="ModelSelector" PlaceholderText="Model" SelectionChanged="ModelSelector_SelectionChanged" Width="140" Margin="0,0,4,0"/>
                <Button x:Name="SettingsButton" Content="âš™ï¸" Click="SettingsButton_Click" ToolTipService.ToolTip="Settings" Margin="0,0,4,0"/>
                <Button x:Name="SendButton" Content="Send" Click="SendButton_Click" Style="{StaticResource AccentButtonStyle}" Margin="0,0,4,0"/>
                <Button x:Name="SkillsButton" Content="ðŸ§©" Click="SkillsButton_Click" ToolTipService.ToolTip="Manage Skills" Margin="0,0,4,0"/>
                <Button Content="ðŸ—‘ï¸" Click="ClearHistory_Click" ToolTipService.ToolTip="Clear History" Margin="0,0,4,0" />
                <Button Content="Download Model" Click="RedownloadButton_Click" ToolTipService.ToolTip="Force Re-download Model"  />
            </StackPanel>
        </Grid>
    </Grid>
</Page>
